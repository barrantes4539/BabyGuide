<script>
    // Función para actualizar un contador
    function actualizarContador(endpoint, contadorId) {
        $.ajax({
            url: endpoint,
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                console.log(data);
                // Actualizar el valor del contador con el valor recibido desde el controlador
                var contadorElement = $("#" + contadorId);
                contadorElement.attr("data-purecounter-end", data);
                contadorElement.text(data);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    // Llamar a la función para actualizar los contadores al cargar la página
    $(document).ready(function () {
        actualizarContador('@Url.Action("ObtenerTotalUsuarios", "Home")', "contadorUsuarios");
        actualizarContador('@Url.Action("ObtenerTotalBebes", "Home")', "contadorBebes");
    });

    // Actualizar los contadores cada 10 segundos (puedes ajustar el tiempo según tus necesidades)
    setInterval(function () {
        actualizarContador('@Url.Action("ObtenerTotalUsuarios", "Home")', "contadorUsuarios");
        actualizarContador('@Url.Action("ObtenerTotalBebes", "Home")', "contadorBebes");
    }, 10000); // 10000 milisegundos = 10 segundos

    function cargarConsejos() {
        $.ajax({
            type: 'GET',
            url: '/Home/ListarConsejos', // Ruta para obtener la lista de consejos
            dataType: 'json',
            success: function (data) {

                console.log(data)
                // Procesar la lista de consejos y agregarlos al testimonial section
                var consejosContainer = document.getElementById('consejosContainer');
                consejosContainer.innerHTML = '';

                data.forEach(function (consejo) {
                    var testimonialItem = document.createElement('div');
                    testimonialItem.className = 'swiper-slide';
                    testimonialItem.innerHTML = `
                        <div class="testimonial-item">
                            <img src="#" class="testimonial-img" alt="">
                            <h3>${consejo.Titulo}</h3>
                            <p>
                                <i class="bi bi-quote quote-icon-left"></i>
                                ${consejo.Descripcion}
                                <i class="bi bi-quote quote-icon-right"></i>
                            </p>
                        </div>
                    `;

                    consejosContainer.appendChild(testimonialItem);
                });

                // Inicializar el slider swiper después de agregar los consejos
                new Swiper('.testimonials-slider', {
                    // Configuración del slider swiper
                });
            },
            error: function () {
                alert('Error al cargar los consejos.');
            }
        });
    }

    // Llamar a la función cargarConsejos al cargar la página
    cargarConsejos();
    function buscarSignificado() {
        // Obtener el nombre ingresado por el usuario
        var nombre = document.getElementById('nombreInput-nameM').value;

        // Realizar la solicitud al controlador utilizando AJAX
        $.ajax({
            type: 'POST',
            url: '/Home/ObtenerSignificadoPorNombre', // Ruta de la función en el controlador
            data: { nombre: nombre },
            dataType: 'json', // Especificamos que esperamos una respuesta JSON del servidor
            success: function (data) {
                // Actualizar el contenido del div con el resultado
                var resultadoDiv = document.getElementById('resultado');
                resultadoDiv.innerHTML = '<h3>Resultado:</h3><p>' + data.significado + '</p>';
            },
            error: function () {
                alert('Error al buscar el significado.');
            }

        });
    }

    // Asociar la función buscarSignificado al evento clic del botón
    document.getElementById('btnBuscarNombre').addEventListener('click', buscarSignificado);
</script>





